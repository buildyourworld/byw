<div class="container-fluid" id="show_project">
	
	<div class="panel panel-default" style="width:90%; margin:auto">	
		<div class="panel-heading" id="show_project_title">
					<%= @project.name %> </br>
		</div>

		<div class="panel-body" style="width:95%; margin:auto">
			<div class="row">
				<div class="col-sm-6 well" style="color:red;">
					<%= image_tag @project.image.url(:thumb)%>
				</div>
				<div class="col-sm-1">
				</div>
				<div class="col-sm-5 well">
					<div><p id="pioneer"><%= current_user.email%></p></div>
					<div><p>Become a volunteer</p></p></div>
					<div class="btn" id="volunteer" style="color:red">I'm in !</div>
					<div>Share the project
						<a href="" class="btn">Facebook</a>
						<a href="" class="btn">Twitter</a>
					</div> 
				</div>
			</div>
			
			
			<div class="row">
				
				<div class="col-sm-6 well pad-top"> 
					<div id="show_project_desc">
						<%= @project.description %>
						<div style="color:red;">
			    			inside the description allow people to add one photo or video
						</div>
					</div>
				</div>

				<div class="col-sm-1">
				</div>

				<div class="col-sm-5 well pad-top">
					<div>
				   	 	<div class="border">
				   	 		<ul>
				   	 		<p>Skills:</p>
				   	 		<% @project.skills.each do |s|%>
				   	 			<li><%= s.name%></li>
				   	 		<%end%>
				   	 		</ul>	
			  			</div>
			  		</div>	

			  			<div id="showpanels" class="pad-top">	
			  				<div class="border">
					   	 		<ul>
					   	 		<p>Tools:</p>
						   	 		<% @project.tools.each do |t|%>
						   	 			<li><%= t.name%></li>
						   	 		<%end%>
					   	 		</ul>
			  				</div>			
			  			</div>
				</div>
			</div>
		</div>
	</div>
</div>

<%# link_to 'Edit', edit_project_path(@project) %>
<div id="back">
<%= link_to 'Back', projects_path %>
</div>