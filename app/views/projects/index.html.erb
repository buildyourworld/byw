<div class="container-fluid" id="main">

  <div class="row" id="screen">
   
       <!-- Carousel -->
   <div id="myCarousel" class="carousel slide" data-interval="5000" data-ride="carousel">
      <!-- Carousel indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>   
       <!-- Carousel items -->
        <div class="carousel-inner">
            <div class="active item">
                <div id="carousel1">
                    <p id="namesite">Build your world</p>
                    <p id="pitchline">"La tâche de gouverner la terre va nous échoir. De là cette question : comment voulons-nous modeler l'avenir de l'humanité ?"</p>
                 </div>
            </div>
            <div class="item">
                <div id="carousel2">
                  <p>Aliquam sit amet gravida nibh, facilisis gravida odio.</p>
                </div>
            </div>
            <div class="item">
                <div id="carousel3">
                  <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
                </div>
            </div>
        </div>
        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
  </div>

  <p class="alert"><%= alert %></p>
  <p id="notice"><%= notice %></p>

  <div class="row" id="listing">
    <% @projects.each do |project| %>
          <div class="col-sm-4 pad-bot">
            <div class="border">
              <div class="row"><%= link_to project.name, project_path(project) %></div>
              <div class="row center"><%= project.description %></div>
            </div>
          </div>            
    <% end %>
  </div>

</div>