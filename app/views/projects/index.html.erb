<div class="container-fluid" id="main">

  <div class="row">
      <p class="alert"><%= alert %></p> 
      <p class="notice"><%= notice %></p>
  </div>
  <div class="row" id="screen">
   
       <!-- Carousel -->
   <div id="myCarousel" class="carousel slide" data-interval="5000" data-ride="carousel">
      <!-- Carousel indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>   
       <!-- Carousel items -->
        <div class="carousel-inner">
            <div class="active item">
                <div id="carousel1">
                    <p id="namesite">Build your world</p>
                    <p id="pitchline">"La tâche de gouverner la terre va nous échoir. De là cette question : comment voulons-nous modeler l'avenir de l'humanité ?"</p>
                 </div>
            </div>
            <div class="item">
                <div id="carousel2">
                  <p>présentation de projets réussis, exemple à Lyon immeuble coopératif</p>
                </div>
            </div>
            <div class="item">
                <div id="carousel3">
                  <p>contact people who succeed in their projects, avoir un carnet d'adresse</p>
                </div>
            </div>
        </div>
        <!-- Carousel nav 
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>-->
    </div>
  </div>

  <div class="row" id="cat_search">
      <div id="searchbar">
        <%= form_tag search_projects_path, method: :get, class: "row center pad-bot", role: "search" do %>
        <%= text_field_tag :search, params[:search], class: "block form-control" %>
        <button id="action_btn">
          search
        </button>
      <% end %>
      </div>

      <div id="categories_list">
            <ul>
              <li><%= link_to "architecture", architecture_projects_path%></li>
              <li><%= link_to "charity", charity_projects_path%></li>
              <li><%= link_to "demonstration", demonstration_projects_path%></li>
              <li><%= link_to "environment", environment_projects_path%></li>
              <li><%= link_to "musique", musique_projects_path%></li>
              <li><%= link_to "sports", sports_projects_path%></li>
              <li><%= link_to "technology", technology_projects_path%></li>
              <li><%= link_to "emergency", emergency_projects_path%></li>
            </ul>
      </div>
  </div>
  
  <div class="row" id="listing">
      <% @projects.each do |project| %>
          <div class="col-sm-4 pad-bot">
              <div class="thumbnail">
                <img src="..." alt="...">
                <div class="caption">
                  <div class="row"><%= link_to project.name, project_path(project) %></div>
                  <div class="row center" id="short_description"><%= project.description %></div>
                </div>
              </div>         
          </div>            
      <% end %>
  </div>
     
</div>
  <div class="row">
    <div class="col-sm-6 col-md-4">
      
    </div>
</div>