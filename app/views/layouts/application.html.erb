<!DOCTYPE html>
<html>
<head >
  <title>Byw</title>

  <!-- font1: title -->
  <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
  <!-- font2 -->
  <link href='http://fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

<div class="container-fluid">
  
  <div class="row" id="header">
    
      <h3><%= link_to "BYW", root_path%></h3>
      <a type="button" href="#modal" data-toggle="modal" id"header_btn">MENU</a>

        <div class="modal fade" id="modal">
        
            <div class="modal-header">
              <a class="close" data-dismiss="modal">&times;</a>  
            </div>
        
            <div class="modal-body">
              
              <div>
                <button type="button" class="btn" data-toggle="dropdown" aria-expanded="false" id="modal-cadre">
                  Involved
                </button>
                <ul class="dropdown-menu" role="menu">
                      <%if user_signed_in?%>
                      <li id="modal-cadre"><a href="#"><%= link_to "Your account", edit_user_registration_path%></a></li>
                      <li id="modal-cadre"><a href="#"><%= link_to "Log out", destroy_user_session_path, method: :delete%></a></li>
                    <%else%>
                      <li id="modal-cadre"><a href="#"><%= link_to "Sign up", new_user_registration_path%></a></li>
                      <li id="modal-cadre"><a href="#"><%= link_to "Log in", new_user_session_path%></a></li>
                    <%end%>
                    <li id="modal-cadre"><a href="#"><%= link_to 'New Project', new_project_path %></a></li>
                    <li id="modal-cadre"><a href="#"><%= link_to "emergency", emergency_projects_path%></a></li>
                  </ul>
              </div>


              <div>
                <button type="button" class="btn" data-toggle="dropdown" aria-expanded="false" id="modal-cadre">
                  Discover
                </button>
                
                <ul class="dropdown-menu" role="menu">
                      
                      <li id="modal-cadre">
                        <a href="#">
                             <%= form_tag search_projects_path, method: :get, class: "row center pad-bot", role: "search" do %>
                            <%= text_field_tag :search, params[:search], class: "block form-control" %>
                            <button id="action_btn">
                              search
                            </button>
                            <% end %>
                        </a>
                      </li>
                      <li id="modal-cadre">
                        <a href="#">
                          <%= link_to "Log out", destroy_user_session_path, method: :delete%>
                      </a>
                      </li>
                      <li id="modal-cadre">
                        <a href="#">
                        <%= link_to "architecture", architecture_projects_path%>
                      </a>
                    </li>
                      <li id="modal-cadre">
                        <a href="#">
                          <%= link_to "charity", charity_projects_path%>
                        </a>
                      </li>
                    <li id="modal-cadre">
                      <a href="#">
                        <%= link_to "environment", environment_projects_path%>
                      </a>
                    </li>
                    <li id="modal-cadre">
                      <a href="#">
                        <%= link_to "musique", musique_projects_path%>
                      </a>
                    </li>
                    <li id="modal-cadre">
                      <a href="#">
                        <%= link_to "technology", technology_projects_path%>
                      </a>
                    </li>
                    <li id="modal-cadre">
                      <a href="#">
                        <%= link_to "sports", sports_projects_path%>
                      </a>
                    </li>
                  </ul>
              </div>

            </div>

            <div class="modal-footer">
                    <a href="#" class="btn" data-dismiss="modal">Close</a>
            </div>
  
       </div>

  </div>

    
  <div class="row" id="home">
    <%= yield %>
  </div>
  
</div>

<footer class="footer" id="footer">
  <a href="" class="btn">Staskstact</a>
  <a href="" class="btn">Contact us</a>
  <a href="" class="btn">Facebook</a>
  <a href="" class="btn">Twitter</a>
</footer>


</body>
</html>
